@article{ WOS:000548501300003,
Author = {Dipeolu, Adedotun Ayodele and Ibem, Eziyi Offia and Fadamiro, Joseph
   Akinlabi and Fadairo, Gabriel},
Title = {Factors influencing residents' attitude towards urban green
   infrastructure in Lagos Metropolis, Nigeria},
