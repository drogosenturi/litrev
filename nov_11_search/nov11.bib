@article{ WOS:000462908600020,
Author = {Turo, Katherine J. and Gardiner, Mary M.},
Title = {From potential to practical: conserving bees in urban public green
   spaces},
Journal = {FRONTIERS IN ECOLOGY AND THE ENVIRONMENT},
Year = {2019},
Volume = {17},
Number = {3},
Pages = {167-175},
Month = {APR},
Abstract = {The documentation of many rare or declining bee species in urban green
   spaces has led to a recent focus on cities as conservation targets.
   However, for pollinator conservation to succeed long term, we argue that
   the opinions and values of local community members must be prioritized
   more explicitly. In our experience, conservation is difficult to achieve
   when the aesthetic and safety concerns of urban residents are not
   reconciled with the goals and habitat designs of conservation
   practitioners. Similarly, from a bee ecology perspective, many questions
   concerning optimal design and management practices for pollinator
   habitats in cities remain unresolved. It is our hope that frank
   discussion of the challenges associated with urban pollinator
   conservation in public green spaces will inspire thoughtful
   consideration of how best to implement new initiatives in cities.},
