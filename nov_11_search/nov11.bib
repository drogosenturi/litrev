@article{ WOS:000623107500001,
Author = {Pithon, Josephine A. and Duflot, Remi and Beaujouan, Veronique and
   Jagaille, M. and Pain, Guillaume and Daniel, Herve},
Title = {Grasslands provide diverse opportunities for bird species along an
   urban-rural gradient},
