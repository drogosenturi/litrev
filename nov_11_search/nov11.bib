@article{ WOS:000390183300023,
Author = {Lin, B. B. and Gaston, K. J. and Fuller, R. A. and Wu, D. and Bush, R.
   and Shanahan, D. F.},
Title = {How green is your garden?: Urban form and socio-demographic factors
   influence yard vegetation, visitation, and ecosystem service benefits},
