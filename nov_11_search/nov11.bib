@article{ WOS:000505513300001,
Author = {Zasada, Ingo and Weltin, Meike and Zoll, Felix and Benninger, Siddhartha
   Lawrence},
Title = {Home gardening practice in Pune (India), the role of communities, urban
   environment and the contribution to urban sustainability},
Journal = {URBAN ECOSYSTEMS},
Year = {2020},
Volume = {23},
Number = {2},
Pages = {403-417},
Month = {APR},
Abstract = {Urban agriculture (UA) is regarded as an emerging tool and strategy for
   sustainable urban development as it addresses a wide array of
   environmental, economic and social objectives. Home gardening represents
   a common form of UA in the close living environments of urban dwellers
   that can be particularly important for rapidly growing cities and
   metropolitan regions in developing and transitional countries. However,
   a structured conceptual analysis of different urban sustainability
